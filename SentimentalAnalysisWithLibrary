from textblob import TextBlob

def sentiment_analysis(text):
    analysis = TextBlob(text)
    if analysis.sentiment.polarity > 0:
        return "happy"
    elif analysis.sentiment.polarity == 0:
        return "neutral"
    else:
        return "sad"

print(sentiment_analysis("I am having a terrible day"))
print(sentiment_analysis("I am having a great day"))
print(sentiment_analysis("I am feeling neutral today"))
